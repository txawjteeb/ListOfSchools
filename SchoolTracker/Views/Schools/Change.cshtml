@model SchoolTracker.Models.School

@{
    ViewBag.Title = @Model.SchoolName + " Change of Contacts";
}

<h2>Change Contacts for @Model.SchoolName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Current Contact Selected for @Model.SchoolName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.ContactID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ContactID, new SelectList(ViewBag.ContactList, "Value", "Text"), "---Select Contact---", new { @onchange = "SelectedIndexChange()" })
                @Html.ValidationMessageFor(model => model.ContactID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "Schools", new { id = Model.ID }, new { @class = "auto-style3" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
